@model List<selfies.Models.thread>

@{
    ViewBag.Title = "chillfeed";
}

<p><b>@ViewBag.selectedHandle.name</b>
    <br />
    <small>
        <span class="edit">@if (ViewBag.selectedHandle.tagLine == null)
            {<text>click to add a tag line</text>} else {
                Html.Raw(ViewBag.selectedHandle.tagLine);
            }</span>
    </small>
</p>

    @if (Model.Count == 0)
    {
        <p>no public history of chill yet, that's cool</p>
    }
    else
    {
        foreach (selfies.Models.thread t in Model)
        {
            <img src="@Url.Content("~/api/snap/500/" + t.groupKey)" />
        }
    }


@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        $('.edit').editable("@Url.Content("~/api/tagline")",
            {
                indicator: 'Saving...',
                tooltip: 'Click to edit...',
                id: "elementid",
                name: "tagline"
            });
    });
</script>
}
