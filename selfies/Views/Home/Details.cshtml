@model List<selfies.Models.thread>

@{
    ViewBag.Title = "chillfeed";
}

<div>
    <b>@ViewBag.selectedHandle.name</b>
</div>
<div id="edit_tagline" class="edit">@ViewBag.selectedHandle.tagLine</div>


    @if (Model.Count == 0)
    {
        <p>no public history of chill yet, that's cool</p>
    }
    else
    {
        foreach (selfies.Models.thread t in Model)
        {
            <img src="@Url.Content("~/api/snap/500/" + t.groupKey)" />
        }
    }


@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {

        $('.edit').editable(function(value, settings) {
            $.post('@Url.Content("~/api/tagline")', { '': value });
            return (value);
        }, {
            indicator: 'Saving...',
            tooltip: 'click here to add a tagline',
            submit: 'edit'
            });
    });
</script>
}
