@using selfies.Models

@if (User.Identity.IsAuthenticated)
{

    <text>
        <p>
            threads (<a href="@Url.Content("~/threads/start")" alt="start new thread">start new one</a>)
        </p>
        <ul>
            @if (ViewBag.threads.Count == 0)
            {
                <text><li>no threads yet, <a href="@Url.Content("~/threads/start")">start one</a></li></text>
            }
            else                
            {
                foreach (thread thready in ViewBag.threads)
                {
                    <text><li><a href="@Url.Content("threads/" + thready.groupKey.Substring(0, 8))">@thready.startDate</a></li></text>
                }                                
            }
        </ul>
    </text>
            
}

